{
    "env": {
        "browser": true,
        "es2021": true,
        "jest/globals": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "no-useless-concat": "off",
        "no-use-before-define": ["error", { "functions": false, "classes": true }],
        "no-plusplus": [2, { "allowForLoopAfterthoughts": true }]
    }
}
